worker_processes 1;
daemon off;

error_log stderr;
pid /tmp/nginx.pid;

events {
  worker_connections 1024;
}

http {
  include mime.types;
  default_type application/octet-stream;
  access_log /dev/stdout;

  # Heroku places your app files in /app
  root /app;
  index index.html index.htm;

  server {
    listen <%= ENV["PORT"] %>; # Use the port Heroku assigns
    server_name _;

    location / {
      # Try to serve the file directly, then as a directory, then fall back to index.html
      # This helps with clean URLs if your static.json was aiming for that.
      try_files $uri $uri/ /index.html;
    }

    # Cache static assets
    location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
      expires 1M;
      add_header Cache-Control "public";
    }
  }
}
